{
  "manifest_version": 3,
  "name": "Text-to-Speech Extension",
  "version": "1.1",
  "description": "Reads out selected text when you click the speak icon.",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon48.png"
    },
    "default_title": "Text-to-Speech"
  }
}
